<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fscommunity.platform.persist.dao.ProjectSubTypeDao">

    <sql id="fields">
    id,
    project_type as projectType,
    sub_type AS subType,
    create_time as createTime,
    update_time as updateTime
    </sql>

    <insert id="saveProjectSubType" parameterType="com.fscommunity.platform.persist.pojo.ProjectSubTypeInfo">
    insert into
    project_sub_type (
    project_type,
    sub_type
    )
    values
    (
    #{projectType},
    #{subType}
    )
      ON DUPLICATE KEY UPDATE
      project_type=values(project_type),
      sub_type=values(sub_type)
    </insert>

    <select id="queryById" parameterType="java.lang.Integer"
      resultType="com.fscommunity.platform.persist.pojo.ProjectSubTypeInfo">
        select
        <include refid="fields"/>
        from project_sub_type
        where id=#{id}
    </select>

    <select id="list" resultType="com.fscommunity.platform.persist.pojo.ProjectSubTypeInfo">
        select
        <include refid="fields"/>
        from project_sub_type
        <where>
            <if test="projectType != null and projectType !=''">
                project_type = #{projectType}
            </if>

        </where>
    </select>
    <update id="updateProjectSubType" parameterType="com.fscommunity.platform.persist.pojo.ProjectSubTypeInfo">
        update project_sub_type
        <set>
            article_id=#{articleId},
            <if test="title != null and title != ''">
                title=#{title},
            </if>
            <if test="subType != null and subType != ''">
                sub_type=#{subType},
            </if>

        </set>
        where id=#{id}
    </update>
    <delete id="delById" parameterType="java.lang.Integer">
        delete from project_sub_type
        where id=#{id}
    </delete>
</mapper>